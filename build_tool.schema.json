{
    "type": "object",
	"properties": {
		"setting": {
			"type": "object",
			"properties": {
				"is-android": {
					"type": "boolean",
					"default": false,
					"description": "Enable build Target Android"
				},
				"is-console": {
					"type": "boolean",
					"default": false,
					"description": "Enable console"
				},
				"main-package": {
					"type": "string"
				},
				"out-path": {
					"type": "string"
				},
				"build-type": {
					"type": "string",
					"enum": [
						"minimal",
						"speed",
						"size",
						"none",
						"aggressive"
					],
					"default": "minimal",
					"description": "Build optimization type"
				},
				"log": {
					"type": "boolean",
					"default": false,
					"description": "Enable logging"
				},
				"resource": {
					"type": "string",
					"description": "Windows resource file path"
				},
				"target-arch": {
					"type": "string",
					"enum": [
						"native",
						"arm64",
						"riscv64",
						"amd64",
						"i386"
					],
					"description": "Target architecture for cross-compilation (only supported for linux)"
				}
			},
			"required": ["main-package", "out-path", "build-type"]
		},
		"android": {
			"type": "object",
			"properties": {
				"ndk": {
					"type": "string"
				},
				"sdk": {
					"type": "string"
				},
				"platform-version": {
					"type": "string",
					"description": "!Must be same as the Build Tool Version"
				},
				"keystore": {
					"type": "string",
					"default": "android/debug.keystore"
				},
				"keystore-password": {
					"type": "string",
					"default": "android"
				},
				"export_vulkan_validation_layer": {
					"type": "boolean",
					"description": "Copy vulkan validation layer so file to android/lib/lib/arm64-v8a (only supported for debug build)",
					"default": false
				}
			},
			"required": ["ndk", "sdk", "platform-version"]
		}
	},
	"required": ["setting"]
}